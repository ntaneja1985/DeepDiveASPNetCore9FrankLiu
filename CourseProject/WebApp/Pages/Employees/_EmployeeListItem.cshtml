
@model Employee

@if (Model is not null)
{
    <tr>
        <td>@Model.Name</td>
        <td>@Model.Position</td>
        <td>@Model.Salary</td>
        <td><a class="btn btn-link" asp-controller="Departments" asp-action="Details" asp-route-id="@Model.DepartmentId">@Model.Department?.Name</a></td>
        <td><a class="btn btn-link" href="/employees/edit/@Model.Id">Edit</a></td>
    </tr>
}